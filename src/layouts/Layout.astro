---
interface Props {
	title: string;
}
const { title } = Astro.props;
const VITE_EMAILJS_KEY = import.meta.env.VITE_EMAILJS_KEY;
const VITE_EMAILJS_SERVICE_ID = import.meta.env.VITE_EMAILJS_SERVICE_ID;
const VITE_EMAILJS_TEMPLATE_ID = import.meta.env.VITE_EMAILJS_TEMPLATE_ID;
---

<!doctype html>
<html lang="en">
	<head>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Onest:wght@100..900&display=swap"
			rel="stylesheet"
		/>
		<script
			type="text/javascript"
			src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"
		></script>
		<script type="text/javascript" define:vars={{ hh: 12 }}>
			(function () {
				emailjs.init({
					VITEKey: VITE_EMAILJS_KEY,
				});
			})();
		</script>
		<script type="text/javascript">
			window.onload = function () {
				document
					.getElementById('contact-form')
					.addEventListener('submit', function (event) {
						event.preventDefault();
						emailjs
							.sendForm(VITE_EMAILJS_SERVICE_ID, VITE_EMAILJS_TEMPLATE_ID, this)
							.then(
								() => {
									alert('Mensaje enviado correctamente');
								},
								(error) => {
									alert('Error al enviar el mensaje: ', error);
								}
							);
					});
			};
		</script>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary: #186ade;

		--surface: #ffffff;
		--on-surface: #000000;

		--secondary-surface: #10151d;
		--on-secondary-surface: #ffffff;

		--radial-start: #3b3e71;
		--radial-end: #1a1a2e;

		--border-card: #3a4c69;
		--drop-sadow-card: #ffffff;

		--border-form: #cccccc;
		--on-surface-form: #cccccc;
	}

	html,
	body {
		width: 100%;
		height: 100%;

		margin: 0;
		padding: 0;

		scroll-behavior: smooth;
	}

	* {
		font-family: 'Onest', sans-serif;
		font-optical-sizing: auto;
		font-weight: 700;
		font-style: normal;
	}

	h1 {
		font-size: 40px;
		font-weight: 700;
	}

	h2 {
		font-size: 32px;
		font-weight: 600;
	}

	h3 {
		font-size: 24px;
		font-weight: 600;
	}

	p {
		font-size: 20px;
		font-weight: 600;
	}

	p.card {
		font-size: 16px;
		font-weight: 600;
	}

	small {
		font-size: 14px;
		font-weight: 600;
	}

	.surface {
		background-color: var(--surface);
		color: var(--on-surface);
	}

	.secondary-surface {
		background-color: var(--secondary-surface);
		color: var(--on-secondary-surface);
	}

	::-webkit-scrollbar {
		display: none;
	}
</style>
