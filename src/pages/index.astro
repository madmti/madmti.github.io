---
import CrtEffect from '../components/CrtEffect.astro';
import GitHubProfile from '../components/GitHubProfile.astro';
import Navigation from '../components/Navigation.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Layout from '../layouts/Layout.astro';

import { HEIGTH } from '../public.env.d';
---

<Layout title="Portafolio">
	<CrtEffect heigth=`${HEIGTH}px` />
	<Navigation />
	<main class="cont-port">
		<h1>Sobre mi</h1>
		<section class="profile-sect">
			<GitHubProfile width="200px" height="200px" />
			<div class="profile-desc">
				<h2>Desarrollador</h2>
				<p class="limited-text">
					Lorem ipsum dolor, sit amet consectetur adipisicing elit. Nemo,
					commodi. Tempore soluta enim, molestiae, vero voluptas ipsum
					reprehenderit distinctio culpa quaerat tempora consequuntur. Officia
					pariatur laudantium, earum quas eligendi minus!
				</p>
			</div>
		</section>
		<h1>Proyectos</h1>
		<section>
			<ul class="project-list">
				<ProjectCard
					title="Room Track"
					description="Aplicación diseñada para facilitar la búsqueda de salas, edificios y otros lugares dentro de la Universidad Técnica Federico Santa María (USM)."
					icon="https://avatars.githubusercontent.com/u/184432680?s=200&v=4"
					link="https://github.com/Room-Track"
					technologies={[
						{
							name: 'Flutter',
							icon: 'data:image/svg+xml;base64,',
							link: 'https://flutter.dev/',
						},
						{
							name: 'Express',
							icon: 'data:image/svg+xml;base64,',
							link: 'https://expressjs.com/',
						},
						{
							name: 'Cosmos DB',
							icon: 'data:image/svg+xml;base64,',
							link: 'https://azure.microsoft.com/en-us/products/cosmos-db/',
						},
					]}
				/>
			</ul>
		</section>
	</main>
</Layout>

<style define:vars={{ hh: HEIGTH }}>
	@media (width <= 900px) {
		.cont-port {
			width: 90vw;
		}
	}
	@media (width > 900px) {
		.cont-port {
			width: 70vw;
		}
	}

	.profile-sect {
		padding: 80px 10px;
	}

	section {
		display: flex;
		flex-wrap: wrap;
	}

	.limited-text {
		max-width: 60ch;
	}

	.profile-desc {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.cont-port {
		height: var(--hh) px;

		display: flex;
		flex-direction: column;
	}

	.project-list {
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
		gap: 50px;
		width: 100%;
	}
</style>
