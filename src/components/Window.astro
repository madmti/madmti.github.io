---
interface Props {
	width: string;
	height: string;
}

const { width, height } = Astro.props;
---

<div class="window">
	<slot />
</div>

<style define:vars={{ width: width, height: height }}>
	.window {
		height: var(--height);
        width: var(--width);

        padding: 20px 40px;

        color: var(--md-primary);
		background-color: #00ff4010;
        box-shadow: inset 0 0 10px var(--md-primary);
		border: solid var(--md-primary) 1px;
	}
</style>
